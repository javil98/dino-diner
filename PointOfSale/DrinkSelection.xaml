<Page x:Class="PointOfSale.SideSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SideSelection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Sodasaurus" Grid.Column="0" Grid.Row="0"></Button>
        <Button Content="TyrannoTea" Grid.Column="0" Grid.Row="1"></Button>
        <Button Content="Jurrassic Java" Grid.Column="0" Grid.Row="2"></Button>
        <Button Content="Water" Grid.Column="0" Grid.Row="3"></Button>
        <Button Content="Small" Grid.Column="1" Grid.Row="0"></Button>
        <Button Content="Medium" Grid.Column="1" Grid.Row="1"></Button>
        <Button Content="Large" Grid.Column="1" Grid.Row="2"></Button>
        <Button Content="Sweet/Decaf/ Flavor" Grid.Column="2" Grid.Row="0"></Button>
        <Button Content="Add Lemon" Grid.Column="2" Grid.Row="1"></Button>
        <Button Content="Hold Ice" Grid.Column="2" Grid.Row="2"></Button>
        
        
    </Grid>
</Page>
